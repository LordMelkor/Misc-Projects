clear all
clc
n=20;
a=0.27;
b=0.97;
k_star=(a*b)^(1/(1-a));

k(1)=0.1*k_star;
c(1)=(1-(a*b))*k(1)^a;

c_star = k_star^a - k_star;
B=[(-1/b) 1; 0 (-1/(c_star^2))];
blah=-b*(1/c_star)*(a^2-a)*k_star^(a-2);
A=[1 0; blah 1/c_star^2];
J=-inv(A)*B;
[T,S]=eig(J);
T1=inv(T);

cbar=inline('c_star-(T1(2,1)/T1(2,2))*(kt-k_star)','kt')

cbar(1)

%{
figure
hold on
plot(k,'b')
plot(kbar,'g')
axis([1 20 0 .17])
title(sprintf('Plots of Capital'))
xlabel('time')
hold off
%}