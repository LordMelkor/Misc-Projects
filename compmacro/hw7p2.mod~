%
% Basic RBC Model
%

%----------------------------------------------------------------
% 0. Housekeeping
%----------------------------------------------------------------

close all

%----------------------------------------------------------------
% 1. Defining variables
%----------------------------------------------------------------

var y c k z;
varexo e;

parameters alfa delta bet gama rho sigma; 

%----------------------------------------------------------------
% 2. Calibration
%----------------------------------------------------------------

alfa    =  0.27;
delta   =  0.05;
gama    =  1.5
bet     =  0.97;
rho     = 0.9;
sigma   = 0.0067;


%----------------------------------------------------------------
% 3. Model
%----------------------------------------------------------------

model; 
  y = exp(z)*k(-1)^alfa;
  c^(-gama) = bet*c(+1)^(-gama)*(1-delta+alfa*exp(zt+1)*k^(alfa-1));
  z = rho*z(-1)+sigma*e;
end;

%----------------------------------------------------------------
% 4. Steady-State
%----------------------------------------------------------------
zss = 0;
kss = (alfa*beta/(1-beta*(1-delta)))^(1/(1-alpha));
css = Kss^alpha - delta*Kss;

%----------------------------------------------------------------
% 5. Computation
%----------------------------------------------------------------


initval;
  k = kss;
  c = css;
  z = 0; 
  e = 0;
end;

shocks;
  var e = 1;
end;

steady;

stoch_simul(order = 1,periods=500,irf=40);
